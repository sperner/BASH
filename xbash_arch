#Variables
. ~/.bash_vars

#Aliases
alias pall="sudo pacman -Suy"
alias pcheck="sudo pacman -Qkk"
alias pclean="sudo pacman -Sc"
alias pdepclean="sudo pacman -Ru $(pacman -Qdt|cut -f1 -d\ )"
alias pinstall="sudo pacman -S"
alias pkeyupdate="sudo pacman-key --refresh-keys"
alias plocalpkg="sudo pacman -U"
alias premove="sudo pacman -R"
alias psearch="pacman -Ss"
alias psync="sudo pacman -Sy"
alias pupdate="sudo pacman -Su"

