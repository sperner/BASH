#Variables
CORES=$(expr $(cat /proc/cpuinfo|grep processor|tail -1|cut -d\  -f2) + 1)

#Aliases
alias aall="sudo apt-get update && sudo apt-get upgrade"
alias acheck="sudo apt-cache"
alias aclean="sudo apt-get autoremove && sudo apt-get autoclean && sudo apt-get clean"
alias ainstall="sudo apt-get install"
alias alocalpkg="sudo dpkg -i"
alias apurge="sudo apt-get remove --purge"
alias aremove="sudo apt-get remove"
alias asearch="apt-cache search"
alias async="sudo apt-get update"
alias aupdate="sudo apt-get upgrade"
