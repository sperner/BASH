#Functions
emanifest()
{
	if [ $# -eq 1 ]
	then
		sudo ebuild $1 manifest
	else
		echo "Manifest an (new/edited) eBuild"
		echo -e "${GREEN}usage:${BLUE} emanifest() <Path2eBuild>${nocol}"
	fi
}

